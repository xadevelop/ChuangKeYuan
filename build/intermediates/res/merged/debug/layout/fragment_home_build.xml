<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_build"
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:scaleType="centerCrop"
        android:src="@drawable/c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_build_teach"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_build"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gv_1"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="幼儿园创客教育方案"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:maxLines="2"
                android:textColor="#2b2a2a"
                android:text="幼儿园创客教育方案是为了孩子们的学习和成长专门定制的。" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_build_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_build"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gv_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="班级项目策划方案"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:textSize="15sp"
                android:maxLines="2"
                android:textColor="#2b2a2a"
                android:layout_marginRight="10dp"
                android:text="班级项目策划方案是为了你" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_build_design"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/selector_build"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gv_3"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:text="创客微项目设计方案"
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="55dp"
                android:textSize="15sp"
                android:maxLines="2"
                android:textColor="#2b2a2a"
                android:layout_marginRight="10dp"
                android:text="....." />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>