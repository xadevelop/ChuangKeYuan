<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center">

        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp"
            android:background="#F9D438"
            android:text="一班"
             />

        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv2"
            android:layout_alignTop="@id/tv1"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/tv1"
            android:layout_toRightOf="@id/tv1"
            android:background="#FF8F84"
            android:text="二班"
            />

        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv4"
            android:layout_alignLeft="@id/tv2"
            android:layout_alignStart="@id/tv2"
            android:layout_below="@id/tv2"
            android:layout_marginTop="30dp"
            android:background="#73D9F3"
            android:text="四班"
             />


        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/tv4"
            android:background="#B4DF51"
            android:text="三班"
            />


        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv3"
            android:layout_marginTop="30dp"
            android:background="#E395E9"
            android:text="五班"
            />

        <TextView
            style="@style/ClassTextViewStyle"
            android:id="@+id/tv6"
            android:layout_alignLeft="@id/tv4"
            android:layout_alignStart="@id/tv4"
            android:layout_alignTop="@id/tv5"
            android:background="#DC6681"
            android:text="六班"
           />
    </RelativeLayout>
</RelativeLayout>