<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/title_bar"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fadingEdge="none"
        android:background="@android:color/white"
        android:scrollbars="none"
        android:id="@+id/horizontalScrollView"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33b5e5"
            >
            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                >
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_bulid"
                    android:id="@+id/btn_build"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_tutor"
                    android:id="@+id/btn_tutor"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_space"
                    android:id="@+id/btn_space"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_school"
                    android:id="@+id/btn_school"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_show"
                    android:id="@+id/btn_show"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_research"
                    android:id="@+id/btn_research"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_study"
                    android:id="@+id/btn_study"
                    />
                <RadioButton
                    style="@style/TabRadioButtonStyle"
                    android:text="@string/radiobutton_tool"
                    android:id="@+id/btn_tool"
                    />
            </RadioGroup>
            <ImageView
                android:id="@+id/img"
                android:layout_width="100dp"
                android:layout_height="4dp"
                android:background="#33b5e5"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </HorizontalScrollView>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_homefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>
